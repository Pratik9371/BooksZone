
@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5">
    <div class="col-6">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-white" asp-action="Upsert"><i class="fa fa-plus"></i> &nbsp; Create New Product</a>
    </div>
</div>

<div class="mt-4 p-4 border rounded">
    <table id="tableData" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}

