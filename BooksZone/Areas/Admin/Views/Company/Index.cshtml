@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5">
    <div class="col-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-white" asp-action="Upsert"><i class="fa fa-plus"></i> &nbsp; Create New Category</a>
    </div>
</div>

<div class="mt-4 p-4 border rounded">
    <table id="tableData" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>Is Authorized Company</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}

